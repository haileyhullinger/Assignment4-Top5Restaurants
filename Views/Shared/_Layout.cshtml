<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!--linked bootstrap-->
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

    <!--icon-->
    <link rel="icon" type="image/png" href="~/favicon2.ico" />
</head>

<body>
    <!--shared naviationi between pages-->
    <a class="btn btn-outline-primary" asp-action="Index">Top 5 Restaurants</a> <br /> <br />
    <a class="btn btn-outline-primary" asp-action="Suggestions">Add Suggestions</a> <br /> <br />
    <a class="btn btn-outline-primary" asp-action="SuggestionList">View the Suggestions</a> <br /> <br />

    <!--viewbag will be different for each page-->

    <h1 class="text-center" >@ViewBag.Title</h1>

    <!--renderbody for each different page-->
    @RenderBody()

    <footer class="footer">
        Hailey Hullinger's Top 5 Restaurants,  2021
    </footer>
</body>
</html>
